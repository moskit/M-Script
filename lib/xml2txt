declare -i i
i=0
declare -a branch
declare -a index
debug=false

addnode() {
  nd=$1
  [[ "$nd" =~ ^\? ]] && return 0
  $debug && echo "=== $nd"
  index[$i]="$nd"
  unset ndcont
  if [ $i -gt 1 ] ; then
    if [ "X${index[$i-2]}" == "X${nd#/}" ] ; then
      ndcont=${index[$i-1]}
    fi
  fi
  n=${#branch[*]}
  $debug && echo "$i | $n  --  $ndcont"
  if [ -n "$ndcont" ] ; then
    for ((l=0; l<$n; l++)) ; do
      if [ $l -eq `expr $n - 1` ] ; then
        echo "${branch[$l]}"
      elif [ $l -eq `expr $n - 2` ] ; then
        echo -n "${branch[$l]}|"
      else
        echo -n "${branch[$l]}_"
      fi
    done
    unset branch[$n-1]; unset branch[$n-2]
  else
    branch[$n]="$nd"
    for ((l=0; l<=$n; l++)) ; do
      if [ "X${branch[$l]}" == "X${nd#/}" ] ; then
        for ((m=0; m<`expr $n - $l`; m++)) ; do unset branch[$l+$m+1] ; done
      fi
    done
  fi
  i+=1
}

( cat $1 | tr -d '\r\n' | tr '<>' '\n' | grep -v ^$ ) | while read node ; do ([ -n "$node" ] && [ "$node" != "|" ]) && addnode "$node"; done

unset branch index ndcont cont i LINE node

