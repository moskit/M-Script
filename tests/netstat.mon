PATH="/sbin:/usr/sbin:${PATH}"
rcommand=${0##*/}
rpath=${0%/*}
#*/
[ -z "$M_ROOT" ] && M_ROOT=$(readlink -f "$rpath/../")
source ${rpath}/../conf/mon.conf
source ${rpath}/../lib/functions.sh

netstatbin=`which netstat 2>/dev/null`
 
timeindexnow=`cat /tmp/m_script/timeindex 2>/dev/null`
lasttimeindex=`cat /tmp/m_script/lasttimeindex 2>/dev/null`

[ -n "$timeindexnow" ] || timeindex=`date +"%s"`
[ -n "$lasttimeindex" ] || lasttimeindex=`sqlite3 ${rpath}/../sysdata "select timeindex from sysdata order by timeindex desc limit 1"` || lasttimeindex=`cat /tmp/m_script/timeindex` || exit 1

curr_values=$($netstatbin -s | grep -E "`cat "${rpath}/netstat.conf" | grep -v ^$ | cut -d'|' -f2 | tr '\n' '|' | sed 's/ /\\ /g;s/|$//'`" | sed 's|^ *||' | while read L; do val=${L%% *}; var=`grep "${L#* }" ${rpath}/netstat.conf | cut -d'|' -f1`; eval "echo \"${var}=${val}\""; done)
prev_values_arr=( `cat "$TMPDIR/netstat.dat" 2>/dev/null` )
rm -f "$TMPDIR/netstat.dat"
for st in $curr_values ; do eval $st ; echo $st >> "$TMPDIR/netstat.dat" ; done
curr_values_arr=( $curr_values )

[ ${#prev_values_arr[*]} -eq 0 ] && echo "`date +"%H:%M:%S"` $rcommand: previous data not found" >> "$M_ROOT/monitoring.log" && exit 1
dat_arr=( $(for L in ${prev_values_arr[*]}; do var=${L%=*}; val=${L#*=}; eval "${var}_prev=${val}"; echo "${var}=`eval "expr \\\$${var} - \\\$${var}_prev"`"; done) )

store_results $(for st in $dat_arr ; do echo -n "${st%%=*}:integer," ; done)

echo -e "\nNetwork stats\n\-------------\n\n" >> "$M_ROOT/report"

for l3 in `cat "${rpath}/netstat.conf" | grep -v ^$ | cut -d'|' -f1,3,4,5 | grep \|` ; do
  var=`echo $l3 | cut -d'|' -f1`
  thr1=`echo $l3 | cut -d'|' -f2`
  thr2=`echo $l3 | cut -d'|' -f3`
  thr3=`echo $l3 | cut -d'|' -f4`
  val=`echo -e "$dat_arr" | tr ' ' '\n' | grep ^${var}= | cut -d'=' -f2`
  [[ `expr $val \> $thr3` -eq 1 ]] && echo "<***> `grep ^$var "${rpath}/netstat.conf" | cut -d'|' -f2` is $val" >> "$M_ROOT/report" && continue
  [[ `expr $val \> $thr2` -eq 1 ]] && echo "<**>  `grep ^$var "${rpath}/netstat.conf" | cut -d'|' -f2` is $val" >> "$M_ROOT/report" && continue
  [[ `expr $val \> $thr1` -eq 1 ]] && echo "<*>   `grep ^$var "${rpath}/netstat.conf" | cut -d'|' -f2` is $val" >> "$M_ROOT/report" && continue
done

