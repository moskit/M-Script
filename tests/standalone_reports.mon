rcommand=${0##*/}
rpath=${0%/*}
#*/
[ -z "$M_ROOT" ] && M_ROOT=`readlink -f "$rpath/../"`

source "$M_ROOT/conf/mon.conf"
source "${0%.mon}.conf"

echo > "$M_ROOT/report"
for sa in `echo "$SATESTS" | tr ',' ' '` ; do
  cat "$M_ROOT/standalone/$sa/report" >> "$M_ROOT/report"
done

