#!/bin/bash

source "$PWD/../../conf/dash.conf"
source "$PWD/../../conf/mon.conf"
source "$PWD/../../lib/dash_functions.sh"

ex=$(find "$PWD"/../graphs -mmin -$(expr 2 \* $freqdef / 60 ) -name localhost.standalone_MongoDB_mongodb.sql3_servers_hostport_`echo "$2" | tr ':' '_'`.opsTotalQPS.svg)
if [ -z "$ex" ] ; then
"$PWD"/../../graph --database=standalone/Postfix/postfix_activity.db --table=postfix_activity --metric=sent,bounced,deferred --ip=$2 --perpixel --width=750 --height=300 --padding=10 --legend=160
fi
echo -e "<div class=\"combinedgraph\">\n<object data=\"/graphs/localhost.standalone_Postfix_postfix_activity.db_postfix_activity_hostport_`echo "$2" | tr ':' '_'`.opsTotalQPS.svg\" type=\"image/svg+xml\" width=\"750\" height=\"300\" style=\"float:left\"></object>\n</div>"

